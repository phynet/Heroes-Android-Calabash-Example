<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:onClick="loadSuperHeroe"
    android:id="@+id/heroesNames">
	
	<ImageView android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:id="@+id/HeroPictureCell"
	    android:maxWidth="200dp"
	    android:maxHeight="200dp"
	    android:layout_alignParentLeft="true"
	   android:contentDescription="heroes images"
	   android:padding="5dp"/>
	
	<RelativeLayout android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/HeroPictureCell"
	    android:gravity="center_vertical">
	    <TextView 
	        android:paddingTop="50dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="20sp"
        	android:textStyle="bold"
		    android:id="@+id/HeroNameCell">
		</TextView>
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/HeroHomeCell"
		    android:layout_below="@id/HeroNameCell">
		</TextView>		
	</RelativeLayout>    
    <!-- android:height="50dp" -->
</RelativeLayout>
