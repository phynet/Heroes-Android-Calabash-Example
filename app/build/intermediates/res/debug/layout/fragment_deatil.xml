<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bddtest.DeatilActivity$PlaceholderFragment" >
	
    <ImageView android:layout_width="200dp"
	   android:layout_height="200dp"
	   android:id="@+id/HeroPictureDetail"
	   android:layout_alignParentTop="true"
	   android:layout_centerHorizontal="true"
	   android:contentDescription="heroes images"
	   android:padding="5dp"/>
    
    <RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/HeroPictureDetail"
	    android:paddingTop="20dp">
	
        <RelativeLayout android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentTop="true"
	    	android:id="@+id/panelHeroeName">
	    	<TextView 
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:textSize="20sp"
	        	android:textStyle="bold"
	        	android:text="@string/Name_"
			    android:id="@+id/HeroNameDetailLabel"
			    android:layout_alignParentLeft="true"
			    android:layout_centerInParent="true">
			</TextView>
	    	<TextView 
			    android:layout_width="200dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/HeroNameDetail"
			    android:layout_toRightOf="@id/HeroNameDetailLabel"
			    android:layout_centerInParent="true">
			</TextView>
	    </RelativeLayout>
	    <RelativeLayout android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/panelHeroeName"
	    	android:id="@+id/panelHeroeHome">
	    	<TextView 
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:textSize="20sp"
	        	android:textStyle="bold"
	        	android:text="@string/Home_"
			    android:id="@+id/HeroHomeDetailLabel"
			    android:layout_alignParentLeft="true"
			    android:layout_centerInParent="true">
			</TextView>
	    	<TextView 
			    android:layout_width="200dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/HeroHomeDetail"
			    android:layout_toRightOf="@id/HeroHomeDetailLabel"
			    android:layout_centerInParent="true">
			</TextView>
	    </RelativeLayout>
	    <RelativeLayout android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/panelHeroeHome"
	    	android:id="@+id/panelHeroePower">
	    	<TextView 
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:textSize="20sp"
	        	android:textStyle="bold"
	        	android:text="@string/Power_"
			    android:id="@+id/HeroPowerDetailLabel"
			    android:layout_alignParentLeft="true"
			    android:layout_centerInParent="true">
			</TextView>
	    	<TextView 
	    	    android:layout_centerInParent="true"
			    android:layout_width="200dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/HeroPowerDetail"
			    android:layout_toRightOf="@id/HeroPowerDetailLabel">
			</TextView>
	    </RelativeLayout>	
	</RelativeLayout>   

</RelativeLayout>
